{{>layout/header}}
<!-- Page Wrapper -->
<div id="wrapper">

    {{>layout/left}}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        {{>common/hiddenForm}}

        <!-- Main Content -->
        <div id="content">

            {{>layout/toolbar}}

            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">뉴스 데이터 분석</h1>

                <!-- Content Row -->
                <div class="row">

                    <div class="col-xl-8 col-lg-7">

                        <!-- Area Chart -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">도메인 별 Crawling Data 추이</h6>
                            </div>
                            <div class="card-body">
                                <div id="lineChart">

                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- Donut Chart -->
                    <div class="col-xl-4 col-lg-5">
                        <div class="card shadow mb-4">
                            <!-- Card Header - Dropdown -->
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">신문사 별 건수</h6>
                            </div>
                            <!-- Card Body -->
                            <div class="card-body">
                                <div id="donutChart">

                                </div>
                                <hr>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Content Row -->
                <div class="row">

                    <div class="col-xl-12 col-lg-7">

                        <!-- Bar Chart -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">핫이슈 키워드 Top 100</h6>
                                <select id="newsHotKeywordCategory" style="float: right;">
                                    <option value="">전체</option>
                                    {{#categoryList}}
                                        <option value="{{name}}">{{name}}</option>
                                    {{/categoryList}}
                                </select>
                            </div>
                            <div class="card-body">
                                <div id="newsHotKeywordAnalysis"></div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Your Website 2020</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

{{>layout/footer}}
<script src="/js/app/news/newsAnalysis.js"></script>