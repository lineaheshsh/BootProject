{{>layout/header}}
<!-- Page Wrapper -->
<div id="wrapper">

    {{>layout/left}}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        {{>common/hiddenForm}}

        <!-- Main Content -->
        <div id="content">

            {{>layout/toolbar}}

            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Q&A 게시글 추가</h1>

                <!-- Content Row -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">카테고리 추가</h6>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">카테고리</label>
                                <select class="form-control" id="boardCategory">
                                {{#categoryList}}
                                    <option value="{{category_id}}">{{category_nm}}</option>
                                {{/categoryList}}
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="small mb-1" for="inputUsername">제목</label>
                                <input class="form-control" id="boardTTL" type="text">
                            </div>
                            <div class="form-group">
                                <label class="small mb-1" for="inputUsername">본문</label>
                                <textarea class="form-control" id="boardContents" rows="10"></textarea>
                            </div>
                            <!-- Save changes button-->
                            <button class="btn btn-danger" id="cancle" type="button" style="float: right;">취소</button>
                            <button class="btn btn-primary" id="qnaAdd" type="button" style="float: right;">저장</button>
                        </form>
                    </div>
                </div>

            </div>

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Your Website 2020</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

{{>layout/footer}}
<script src="/js/app/news/newsQnA.js"></script>